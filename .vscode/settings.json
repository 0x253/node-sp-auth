{
  "editor.renderWhitespace": "all",
  "editor.tabSize": 2,
  "files.trimTrailingWhitespace": false,
  "files.exclude": {
    "node_modules/": false,
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.d.ts": {
      "when": "$(basename).js"
    },
    "**/*.js.map": true
  },
  "editor.wordWrap": "on",
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 2000,
  "editor.minimap.maxColumn": 90,
  "editor.minimap.renderCharacters": false
}